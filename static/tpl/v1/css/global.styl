/* PieChart */
.items .item
  display inline-block
  margin-bottom 1rem;

.items .item:hover,
.items .item h4:hover
  color verdeL

.items .chart
  width 150px
  height 150px

.chart {
  position relative
  display inline-block
  width 110px
  height 110px
  text-align center
}
.chart canvas {
  position absolute
  top 0
  left 0
}
.chart.full {
  background verde
  color blanco
  border-radius 50%
}
.percent {
  display inline-block
  /*line-height: 110px;*/
  z-index 2
  font-size 2rem
  padding-top 1.5rem
}
.percent:after {
  content: '%';
  margin-left: 0.1em;
  font-size: .8em;
}
.big .chart .percent {
  /*line-height: 150px;*/
}

